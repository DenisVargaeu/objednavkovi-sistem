<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Objednávkový systém</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1>Objednaj si</h1>
    </header>

    <main>
        <section class="menu">
            <h2>Nápoje</h2>
            <div class="menu-grid">
                <div class="menu-item">
                    <img src="https://via.placeholder.com/100" alt="Voda">
                    <p><strong>Voda</strong></p>
                    <p class="price">0€</p>
                    <button class="custom-button" onclick="addToCart('Voda', 0)">Pridať</button>
                </div>
                <div class="menu-item">
                    <img src="https://via.placeholder.com/100" alt="Čaj">
                    <p><strong>Čaj</strong></p>
                    <p class="price">1€</p>
                    <button class="custom-button" onclick="addToCart('Čaj', 1)">Pridať</button>
                </div>
            </div>
        </section>

        <section class="menu">
            <h2>Jedlá</h2>
            <div class="menu-grid">
                <div class="menu-item">
                    <img src="https://via.placeholder.com/100" alt="Pizza">
                    <p><strong>Pizza</strong></p>
                    <p class="price">7.5€</p>
                    <button class="custom-button" onclick="addToCart('Pizza', 7.5)">Pridať</button>
                </div>
                <div class="menu-item">
                    <img src="https://via.placeholder.com/100" alt="Hamburger">
                    <p><strong>Hamburger</strong></p>
                    <p class="price">5.5€</p>
                    <button class="custom-button" onclick="addToCart('Hamburger', 5.5)">Pridať</button>
                </div>
            </div>
        </section>

        <section class="menu">
            <h2>Dezerty</h2>
            <div class="menu-grid">
                <div class="menu-item">
                    <img src="https://via.placeholder.com/100" alt="Koláč">
                    <p><strong>Koláč</strong></p>
                    <p class="price">3€</p>
                    <button class="custom-button" onclick="addToCart('Koláč', 3)">Pridať</button>
                </div>
                <div class="menu-item">
                    <img src="https://via.placeholder.com/100" alt="Zmrzlina">
                    <p><strong>Zmrzlina</strong></p>
                    <p class="price">2.5€</p>
                    <button class="custom-button" onclick="addToCart('Zmrzlina', 2.5)">Pridať</button>
                </div>
            </div>
        </section>

        <section class="cart">
            <h2>Košík</h2>
            <ul id="cart-items"></ul>
            <p><strong>Cena spolu:</strong> <span id="total-price">0€</span></p>
        </section>
    </main>

    <script src="script.js"></script>
</body>
</html>
